run = "python app.py"
language = "python3"
modules = ["python-3.10:v18-20230807-322e88b"] # Match your Python version
hidden = [".pythonlibs", ".config"]

[nix]
channel = "stable-23_05"

[deployment]
run = "python app.py"
deploymentTarget = "autoscale"
ignorePorts = false
externalPort = 80
build = "bash build_and_run.sh"

[env]
REPLIT_DISABLE_PACKAGE_LAYER = "1"
PYTHONPATH = "${REPL_HOME}"

[[ports]]
localPort = 5000
externalPort = 80
